{
  "$schema": "https://raw.githubusercontent.com/martinring/tmlanguage/master/tmlanguage.json",
  "name": "Scratch Lang",
  "patterns": [
    {
      "include": "#statements"
    }
  ],
  "repository": {
    "statements": {
      "patterns": [
        {
          "include": "#blocks"
        },
        {
          "include": "#assignments"
        },
        {
          "include": "#declarations"
        },
        {
          "include": "#functions"
        },
        {
          "include": "#repeats"
        },
        {
          "include": "#expressions"
        }
      ]
    },
    "blocks": {
      "name": "meta.block",
      "begin": "(\\{)",
      "end": "(\\})",
      "beginCaptures": {
        "1": {
          "name": "punctuation.section.block.begin.scl"
        }
      },
      "endCaptures": {
        "1": {
          "name": "punctuation.section.block.end.scl"
        }
      },
      "patterns": [
        {
          "include": "#statements"
        }
      ]
    },
    "assignments": {
      "name": "meta.assignment",
      "begin": "\\b([a-zA-Z_\u4e00-\u9fa5][a-zA-Z0-9_\u4e00-\u9fa5]+)\\s*(=|\\+=|-=|\\*=|/=|%=)",
      "end": "(;)",
      "beginCaptures": {
        "1": {
          "name": "variable.assignment.scl"
        },
        "2": {
          "name": "keyword.operator.assignment.scl"
        }
      },
      "endCaptures": {
        "1": {
          "name": "punctuation.terminator.statement.scl"
        }
      },
      "patterns": [
        {
          "include": "#expressions"
        }
      ]
    },
    "declarations": {

    },
    "functions": {

    },
    "repeats": {
    },
    "expressions": {
      "patterns": [
        {
          "include": "#expression-numbers"
        }
      ]
    }
  },
  "scopeName": "source.scl"
}
